<h4>Create Product</h4>

<form method="POST" action="/products/add" enctype="multipart/form-data">
    <label>Product Name</label>
    <input type="text" name="name" id="name"><br><br>

    <label>Product Price</label>
    <input type="number" name="price" id="price"><br><br>

    <label>Description</label>
    <textarea name="desc" id="desc"></textarea><br><br>

    <label>Category</label>
    <input type="text" name="category"><br><br>

    <label>Quantity</label>
    <input type="number" name="quantity" id="quantity"><br><br>

    <labe>Bestseller?</labe>
    <input type="radio" name="hot" id="hot" value="true">YES
    <input type="radio" name="hot" id="hot" value="false">NO
    <br><br>
    <label>Image Upload</label>
    <input type="file" name="src" id="src"><br><br>

    <input type="submit" value="Add Product">


</form>