<h4>Update Product</h4>

<form method="POST" action="/products/update/{{_id}}?method=PUT" enctype="multipart/form-data">
    <label>Product Name</label>
    <input type="text" name="name" id="name" value="{{name}}"><br><br>

    <label>Product Price</label>
    <input type="number" name="price" id="price" value="{{price}}"><br><br>

    <label>Description</label>
    <textarea name="desc" id="desc">{{desc}}</textarea><br><br>

    <label>Category</label>
    <input type="text" name="category" value="{{category}}"><br><br>

    <label>Quantity</label>
    <input type="number" name="quantity" id="quantity" value="{{quantity}}"><br><br>

    <labe>Bestseller?</labe>
    <input type="radio" name="hot" id="hot" value="true">YES
    <input type="radio" name="hot" id="hot" value="false">NO
    <br><br>


    <input type="submit" value="Update Product">


</form>